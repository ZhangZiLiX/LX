<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.lx_butterknife.MainActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <Button
            android:id="@+id/btn_circle_x"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="圆型图"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/btn_circle_j"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="圆角:7DP"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/btn_widthandheight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="宽高比:1.2"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/btn_gifimg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="加载动图"
            android:textSize="25sp"
            />

    </LinearLayout>


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simple_img"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        fresco:viewAspectRatio="1.2"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btn_zhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="获取注解值"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_gravity="center"
        />
</LinearLayout>
